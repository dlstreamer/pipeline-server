{
    "path": "pipelines/audio_detection/environment",
    "start" : {
        "body": {
            "source": {
                "uri": "file:///home/pipeline-server/tests/media/how_are_you_doing.wav",
                "type": "uri"
            },
            "destination": {
                "type": "file",
                "path": "/tmp/rest_audio_detection_gstreamer",
                "format": "json-lines"
            },
            "parameters": {
                "detection-device": "GPU"
            }
        }
    },
    "check_running" : {
        "timeout": 30.0
    },
    "abort" : {
        "delay" : 0
    },
    "check_stopped" : {
        "timeout": 0.5
    }
}
